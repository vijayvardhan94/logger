<p id="notice"><%= notice %></p>

<h1>Workout Log</h1>
<h3> Make a log of your daily activity by clicking the button below</h1>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Steps</th>
      <th>Activitycalories</th>
      <th>Sleepstarttime</th>
      <th>Sleependtime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workout_loggings.each do |workout_logging| %>
      <tr>
        <td><%= workout_logging.date %></td>
        <td><%= workout_logging.dailyHeartRate %></td>
        <td><%= workout_logging.float %></td>
        <td><%= workout_logging.hourlyHeartRate %></td>
        <td><%= workout_logging.float %></td>
        <td><%= workout_logging.height %></td>
        <td><%= workout_logging.weight %></td>
        <td><%= workout_logging.steps %></td>
        <td><%= workout_logging.lightlyActiveminutes %></td>
        <td><%= workout_logging.fairlyActiveminutes %></td>
        <td><%= workout_logging.veryActiveminutes %></td>
        <td><%= workout_logging.activityCalories %></td>
        <td><%= workout_logging.sleepStartTime %></td>
        <td><%= workout_logging.sleepEndTime %></td>
        <td><%= link_to 'View workout', workout_logging %></td>
        <td><%= link_to 'Edit workout', edit_workout_logging_path(workout_logging) %></td>
        <td><%= link_to 'Delete', workout_logging, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

